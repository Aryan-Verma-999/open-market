# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application
NODE_ENV=production
PORT=3002

# Database
DATABASE_URL=postgresql://username:password@postgres:5432/equipment_marketplace
POSTGRES_DB=equipment_marketplace
POSTGRES_USER=equipment_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=equipment-marketplace-uploads
CDN_URL=https://your-cdn-domain.com

# Email Configuration (SendGrid/SES)
EMAIL_FROM=noreply@equipment-marketplace.com
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
# OR for AWS SES
# EMAIL_PROVIDER=ses
# AWS_SES_REGION=us-east-1

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Grafana
GRAFANA_PASSWORD=your_secure_grafana_password

# Domain Configuration
DOMAIN=equipment-marketplace.com
FRONTEND_URL=https://equipment-marketplace.com
BACKEND_URL=https://api.equipment-marketplace.com

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_LISTING=12

# Cache Configuration
CACHE_TTL=3600
SEARCH_CACHE_TTL=1800

# Feature Flags
ENABLE_ESCROW=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true