# Database
DATABASE_URL="postgresql://username:password@localhost:5432/equipment_marketplace"

# Redis (optional for development)
REDIS_URL="redis://localhost:6379"

# JWT Secrets
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"

# Server
PORT=3002
NODE_ENV=development

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="equipment-marketplace-uploads"

# CDN Configuration (optional)
CDN_URL="https://cdn.equipment-marketplace.com"

# API Keys for external services (comma-separated)
API_KEYS="key1,key2,key3"

# Performance and Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=300
MAX_REQUEST_SIZE="50mb"

# Monitoring and Logging
LOG_LEVEL="info"
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD_MS=1000

# Email (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM=""

# Production Security (set in production only)
HELMET_CSP_REPORT_URI=""
TRUSTED_PROXIES="127.0.0.1,::1"